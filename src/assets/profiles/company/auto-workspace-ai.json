{
  "id": "auto_workspace_ai",
  "name": "Auto-Workspace-AI",
  "type": "company",
  "version": "1.0.0",
  "description": "Official brand profile for Auto-Workspace-AI",

  "colors": {
    "primary": "#00d4ff",
    "secondary": "#7b61ff",
    "tertiary": "#00ff88",
    "accent": "#ff3366",
    "background": "#0a0a0f",
    "backgroundLight": "#13131a",
    "backgroundLighter": "#1a1a24",
    "text": "#e8e8f0",
    "textSecondary": "#a0a0b8",
    "textTertiary": "#70708c",
    "success": "#00ff88",
    "warning": "#ffaa00",
    "error": "#ff3366"
  },

  "gradients": {
    "primary": {
      "type": "linear",
      "angle": 135,
      "stops": [
        { "color": "#00d4ff", "position": 0 },
        { "color": "#7b61ff", "position": 100 }
      ]
    },
    "tech": {
      "type": "radial",
      "stops": [
        { "color": "#00d4ff", "position": 0, "opacity": 0.2 },
        { "color": "#7b61ff", "position": 50, "opacity": 0.1 },
        { "color": "transparent", "position": 100 }
      ]
    },
    "success": {
      "type": "linear",
      "angle": 90,
      "stops": [
        { "color": "#00ff88", "position": 0 },
        { "color": "#00d4ff", "position": 100 }
      ]
    }
  },

  "fonts": {
    "primary": "Inter",
    "display": "Montserrat",
    "mono": "JetBrains Mono",
    "heading": {
      "family": "Montserrat",
      "weight": 700,
      "lineHeight": 1.2
    },
    "body": {
      "family": "Inter",
      "weight": 400,
      "lineHeight": 1.5
    },
    "code": {
      "family": "JetBrains Mono",
      "weight": 500,
      "lineHeight": 1.6
    }
  },

  "typography": {
    "scale": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem",
      "5xl": "3rem"
    },
    "letterSpacing": {
      "tight": "-0.02em",
      "normal": "0",
      "wide": "0.05em"
    }
  },

  "spacing": {
    "xs": "0.25rem",
    "sm": "0.5rem",
    "md": "1rem",
    "lg": "1.5rem",
    "xl": "2rem",
    "2xl": "3rem",
    "3xl": "4rem"
  },

  "borderRadius": {
    "sm": "4px",
    "md": "6px",
    "lg": "8px",
    "xl": "12px",
    "full": "9999px"
  },

  "shadows": {
    "sm": "0 1px 3px rgba(0, 0, 0, 0.3)",
    "md": "0 4px 12px rgba(0, 0, 0, 0.4)",
    "lg": "0 8px 24px rgba(0, 0, 0, 0.5)",
    "glow": "0 0 20px rgba(0, 212, 255, 0.3)"
  },

  "animations": {
    "default": "fadeIn",
    "duration": "1s",
    "easing": "ease",
    "preferred": ["fadeIn", "slideIn", "zoom"]
  },

  "accessibility": {
    "contrastRatio": 4.5,
    "minFontSize": "14px",
    "targetSize": "44px",
    "wcagLevel": "AA"
  },

  "emergence": {
    "defaultScene": "corporate",
    "defaultLayout": "centered",
    "defaultAnimation": "fadeIn",
    "preferredDecorations": ["geometric", "tech", "gradient"],
    "brandTone": "professional",
    "brandValues": ["innovation", "reliability", "efficiency", "intelligence"]
  },

  "canvas": {
    "defaultRatio": "1:1",
    "supportedRatios": ["1:1", "16:9", "4:5", "9:16"],
    "defaultDimensions": {
      "width": 1080,
      "height": 1080
    }
  },

  "metadata": {
    "author": "Auto-Workspace-AI Design Team",
    "created": "2025-01-25",
    "updated": "2025-01-25",
    "version": "1.0.0",
    "tags": ["tech", "ai", "automation", "professional"]
  }
}
