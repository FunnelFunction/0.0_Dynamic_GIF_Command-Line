{
  "id": "minimal",
  "name": "Minimal",
  "description": "Clean, minimalist scene with centered text",
  "version": "1.0.0",

  "layout": {
    "type": "centered",
    "alignment": "center",
    "distribution": "center"
  },

  "elements": [
    {
      "type": "text",
      "id": "main-text",
      "position": {
        "x": "50%",
        "y": "50%",
        "anchor": "center"
      },
      "typography": {
        "align": "center",
        "size": "2xl",
        "weight": 600
      }
    }
  ],

  "background": {
    "type": "solid",
    "color": "#ffffff",
    "fallback": "#f5f5f5"
  },

  "decorations": [],

  "animation": {
    "default": "fadeIn",
    "duration": "1s",
    "easing": "ease"
  },

  "constraints": {
    "minElements": 1,
    "maxElements": 3,
    "textRequired": true
  },

  "metadata": {
    "category": "basic",
    "complexity": "simple",
    "tags": ["minimal", "clean", "text", "centered"]
  }
}
